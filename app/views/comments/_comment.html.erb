<div class="ui comments">
  <div class="comment">
    <a class="avatar">
      <%= cl_image_tag(comment.avatar, :width=>300, :height=>300, :crop=>"crop", :secure=>true) %>
    </a>

    <div class="content">
      <a class="author">
        <%= comment.name %>
      </a>
      <div class="metadata">
        <span class="date">
          <%= time_ago_in_words(comment.created_at) %> ago
        </span>
      </div>
      <div class="text">
        <%= comment.context %>
      </div>
      <% if @current_user == @post.user %>
        <span>
          <%= link_to 'Delete', [comment.post, comment], method: :delete, data:{confirm: 'Are you sure?'} %>
        </span>
      <% end %>
    </div>
  </div>
</div>
