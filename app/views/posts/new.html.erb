
<!-- =========================== Webcam UI================================================ -->
<div class="holder" id="webcamjs">
  <div class="ui two column centered middle aligned grid">
    <div class="row"></div>

    <!-- wrapp the camera live preview -->
    <div class="ui segment">
      <div id="my_camera"></div>
    </div>

    <div class="four column centered row">
      <div id="pre_take_buttons">
        <button class="ui teal button"><i class="photo icon"></i>Take Snapshot</button>
      </div>

      <div id="post_take_buttons" style="display:none">
        <button class="ui red button" id="cancel"><i class="remove icon"></i>Cancel Preview</button>
        <button class="ui blue button" id="save"><i class="save icon"></i>Save Photo</button>
      </div>
    </div>
  </div>

</div>
