<div class="ui grid" id="editor_ui" style="display:none">
  <!-- function buttons view -->
  <div id="menu" class="centered row">
    <div class="eight wide center aligned column">

      <div class="ui buttons">
        <button class="ui button" id ='clear'><i class="trash outline icon"></i>Clear </button>
        <button id="download" class="ui button"><i class="save icon"></i>Download </button>
        <button id="camera" class="ui button"><i class="camera retro icon"></i>Camera</button>

        <!-- ===============Upload image to online gallery================ -->
        <%= form_for Post.new, html: {multipart: true} do |f| %>
        <% f.label :file %>
        <%= hidden_field_tag :image %>

        <button class="ui button"><i class="cloud upload icon"></i>Upload</button>
        <% end %>
        <!-- ===============Upload image to online gallery================ -->
      </div>

    </div>
  </div>


