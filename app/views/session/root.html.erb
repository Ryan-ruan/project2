
<div class="ui centered grid">
  <div class="eight column wide">

    <div id="welcome" class="ui two column middle aligned centered grid">
      <div class="column">
        <div class="welcome">
          <div class = "pikq">PikQ</div>
          <div class = "intro">Unleash your Creativity</div>
        </div>
      </div>

      <div class="two column centered row">
        <div class="column">
          <div class="two ui large equal width buttons">
            <%= link_to new_post_path, class: "ui purple large button" do %>
              <i class="photo icon"></i>Get Started!
            <% end %>
            <%= link_to posts_path, class: "ui olive large button" do %>
              <i class="image icon"></i>Gallery
            <% end %>
          </div>
        </div>
      </div>

      <div class="two column centered row">
        <div class="column">
          <div class="two ui large buttons">
            <%= link_to 'SignUp', new_user_path, class: "ui purple large basic button" %>

            <%= link_to 'Login', login_path, class: "ui purple large basic button" %>
          </div>
        </div>
      </div>
    </div>



  </div>
</div>
